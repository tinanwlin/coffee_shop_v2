<% if cart.size == 0 %>
  <h3>Your cart is empty.</h3>
  <p><%= link_to "Click here to Home Page", root_path %></p>
<% else %>
  <h3>My Cart</h3>
  <table class="table table-bordered"``>
    <thead>
      <tr>
        <th>Product</th>
        <th>Unit Price</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @cart_total = 0 %>
      <% cart.each do |product_id, details| %>
        <%= render "item", product_id: product_id, details: details %>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="3">
          Total:
        </th>
        <th><%= @cart_total %></th>
      </tr>
    </tfoot>
  </table>
  <br>
  <%= form_with scope: :order, url: orders_path do |f| %>
    <%= f.submit "Confirm Order" %>
  <% end %>
  <br>
  <%= link_to "Home Page", products_path %>
<% end %>